{
  "name": "nextracker-website",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "// Development": "---------------------------------------------",
    "dev": "next dev --turbo",
    "dev:fresh": "npm run clean && npm run dev",
    "start": "next start",
    "preview": "next build && next start",
    "// Build": "---------------------------------------------",
    "build": "npm run build:with-maps",
    "build:with-maps": "node ./scripts/build-with-source-maps.js",
    "build:no-maps": "node ./scripts/build-with-source-maps.js --no-maps",
    "build:modern": "node ./scripts/build-modern.js",
    "build:analyze": "npm run sitemap:routing && ANALYZE=true next build",
    "// Code Quality": "---------------------------------------------",
    "check": "npm run lint:all && npm run typecheck",
    "lint": "eslint src --ext .js,.jsx,.ts,.tsx",
    "lint:fix": "eslint src --ext .js,.jsx,.ts,.tsx --fix",
    "lint:all": "npm run lint && npm run security:lint",
    "typecheck": "tsc --noEmit",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,mdx}\" --cache",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,mdx}\" --cache",
    "// Testing": "---------------------------------------------",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:formatted": "vitest run --coverage | node scripts/test-formatter.js",
    "// Accessibility": "---------------------------------------------",
    "a11y": "pa11y http://localhost:3000",
    "a11y:generate-sitemap": "npx tsx scripts/generate-sitemap.ts",
    "a11y:test-sitemap": "npx tsx scripts/run-pa11y.ts",
    "a11y:ci": "npm run a11y:generate-sitemap && npm run a11y:test-sitemap",
    "sitemap:routing": "npx tsx scripts/generate-routing-sitemap.ts",
    "sitemap:test": "npx tsx scripts/test-routing.ts",
    "// Security": "---------------------------------------------",
    "security": "npm run security:deps && npm run security:secrets",
    "security:audit": "npm audit --audit-level moderate",
    "security:lint": "eslint src --ext .ts,.tsx --config .eslintrc.security.cjs --quiet && echo 'âœ… Security check passed - no vulnerabilities detected'",
    "security:report": "node scripts/security-report.cjs",
    "security:audit-suppressions": "node scripts/security-suppression-audit.cjs",
    "security:deps": "npx better-npm-audit audit",
    "security:secrets": "npx tsx scripts/security-scan.ts",
    "security:headers": "npx tsx scripts/check-security-headers.ts",
    "security:summary": "npx tsx scripts/security-summary.ts",
    "security:scorecard": "npm run security:summary",
    "security:test": "k6 run security-tests/main-security-test.js",
    "security:test:auth": "k6 run security-tests/scenarios/auth-tests.js",
    "security:test:injection": "k6 run security-tests/scenarios/injection-tests.js",
    "security:test:performance": "k6 run security-tests/scenarios/performance-tests.js",
    "security:test:no": "node -e \"require('fs').mkdirSync('security-tests/results', {recursive:true})\" && k6 run -e LOAD_PROFILE=noLoad --out json=security-tests/results/k6-results-noLoad.json security-tests/load-test-runner.js && bun security-tests/scripts/generate-report.js security-tests/results/k6-results-noLoad.json noLoad",
    "security:test:base": "k6 run -e LOAD_PROFILE=baseLoad --out json=security-tests/results/k6-results-baseLoad.json security-tests/load-test-runner.js && bun security-tests/scripts/generate-report.js security-tests/results/k6-results-baseLoad.json baseLoad",
    "security:test:peak": "k6 run -e LOAD_PROFILE=peakLoad --out json=security-tests/results/k6-results-peakLoad.json security-tests/load-test-runner.js && bun security-tests/scripts/generate-report.js security-tests/results/k6-results-peakLoad.json peakLoad",
    "security:test:local-peak": "k6 run -e LOAD_PROFILE=localPeakLoad --out json=security-tests/results/k6-results-localPeakLoad.json security-tests/load-test-runner.js && bun security-tests/scripts/generate-report.js security-tests/results/k6-results-localPeakLoad.json localPeakLoad",
    "security:test:distributed-peak": "cd security-tests/docker && powershell -ExecutionPolicy Bypass -File run-distributed-peak-test.ps1",
    "security:test:spike": "k6 run -e LOAD_PROFILE=spikeLoad --out json=security-tests/results/k6-results-spikeLoad.json security-tests/load-test-runner.js && bun security-tests/scripts/generate-report.js security-tests/results/k6-results-spikeLoad.json spikeLoad",
    "security:test:stress": "k6 run -e LOAD_PROFILE=stressLoad --out json=security-tests/results/k6-results-stressLoad.json security-tests/load-test-runner.js && bun security-tests/scripts/generate-report.js security-tests/results/k6-results-stressLoad.json stressLoad",
    "security:load:no": "k6 run -e LOAD_PROFILE=noLoad security-tests/load-test-runner.js",
    "security:load:base": "k6 run -e LOAD_PROFILE=baseLoad security-tests/load-test-runner.js",
    "security:load:peak": "k6 run -e LOAD_PROFILE=peakLoad security-tests/load-test-runner.js",
    "security:load:spike": "k6 run -e LOAD_PROFILE=spikeLoad security-tests/load-test-runner.js",
    "security:load:soak": "k6 run -e LOAD_PROFILE=soakLoad security-tests/load-test-runner.js",
    "security:load:extreme": "k6 run -e LOAD_PROFILE=extremeLoad security-tests/load-test-runner.js",
    "security:load:profiles": "k6 run -e LIST_PROFILES=true security-tests/load-test-runner.js",
    "security:validate": "node scripts/security-validation.js",
    "// CI/CD": "---------------------------------------------",
    "ci:lint": "./scripts/run-act.sh lint",
    "ci:format": "./scripts/run-act.sh format",
    "ci:test": "./scripts/run-act.sh test",
    "ci:build": "./scripts/run-act.sh build",
    "// Utilities": "---------------------------------------------",
    "prepare": "husky",
    "clean": "rm -rf .next",
    "clean:all": "rm -rf .next node_modules"
  },
  "dependencies": {
    "@contentful/rich-text-html-renderer": "^17.1.0",
    "@contentful/rich-text-plain-text-renderer": "^17.0.0",
    "@contentful/rich-text-react-renderer": "^16.1.0",
    "@contentful/rich-text-types": "^17.1.0",
    "@lottiefiles/dotlottie-react": "^0.17.3",
    "@mux/mux-video-react": "^0.12.0",
    "@radix-ui/react-accordion": "^1.2.12",
    "@radix-ui/react-collapsible": "^1.1.12",
    "@radix-ui/react-dialog": "^1.1.14",
    "@radix-ui/react-dropdown-menu": "^2.1.2",
    "@radix-ui/react-label": "^2.1.0",
    "@radix-ui/react-navigation-menu": "^1.2.1",
    "@radix-ui/react-progress": "^1.1.7",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-toast": "^1.2.2",
    "@t3-oss/env-nextjs": "^0.10.1",
    "@tanstack/react-form": "^1.23.0",
    "@tanstack/react-query": "^5.61.3",
    "@tanstack/react-query-devtools": "^5.62.2",
    "@tanstack/zod-form-adapter": "^0.42.1",
    "@types/react-pdf": "^5.0.7",
    "@uidotdev/usehooks": "^2.4.1",
    "@vitejs/plugin-react": "^4.3.4",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.1",
    "contentful": "^11.8.7",
    "critters": "^0.0.23",
    "dotenv": "^16.6.1",
    "embla-carousel-react": "^8.6.0",
    "framer-motion": "^11.13.1",
    "geist": "^1.3.0",
    "jotai": "^2.10.3",
    "jotai-devtools": "^0.5.3",
    "jotai-tanstack-query": "^0.9.0",
    "k6": "^0.0.0",
    "lucide-react": "^0.461.0",
    "motion": "^12.23.12",
    "next": "^15.0.1",
    "next-themes": "^0.4.4",
    "node-fetch": "^3.3.2",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-intersection-observer": "^9.13.1",
    "react-pdf": "^10.2.0",
    "react-wrap-balancer": "^1.1.1",
    "tailwind-merge": "^2.5.5",
    "tw-animate-css": "^1.2.4",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@contentful/live-preview": "^4.6.12",
    "@eslint-react/eslint-plugin": "^1.17.3",
    "@eslint/config-array": "^0.20.0",
    "@eslint/object-schema": "^2.1.6",
    "@fullhuman/postcss-purgecss": "^7.0.2",
    "@ianvs/prettier-plugin-sort-imports": "^4.7.0",
    "@next/bundle-analyzer": "^15.5.1",
    "@tailwindcss/postcss": "^4.1.15",
    "@tailwindcss/typography": "^0.5.16",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.2.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/eslint": "^8.56.10",
    "@types/node": "^20.14.10",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@typescript-eslint/eslint-plugin": "^8.1.0",
    "@typescript-eslint/parser": "^8.1.0",
    "@vitest/coverage-v8": "^3.0.9",
    "autoprefixer": "^10.4.21",
    "better-npm-audit": "^3.11.0",
    "css-minimizer-webpack-plugin": "^7.0.2",
    "cssnano": "^7.1.1",
    "eslint": "^8.57.0",
    "eslint-config-next": "^15.0.1",
    "eslint-plugin-security": "^3.0.1",
    "glob": "^11.0.1",
    "husky": "^9.1.7",
    "jsdom": "^26.0.0",
    "pa11y": "^8.0.0",
    "pa11y-ci": "^4.0.1",
    "postcss": "^8.4.39",
    "prettier": "^3.3.2",
    "prettier-plugin-tailwindcss": "^0.6.11",
    "rimraf": "^6.0.1",
    "tailwindcss": "^4.1.6",
    "tsx": "^4.20.5",
    "typescript": "^5.5.3",
    "vitest": "^3.0.9"
  },
  "browserslist": {
    "production": [
      "> 0.5%",
      "last 2 versions",
      "not dead",
      "not ie 11",
      "not op_mini all",
      "Chrome >= 88",
